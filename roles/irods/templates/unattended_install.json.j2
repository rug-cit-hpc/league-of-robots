{
   "admin_password": "{{ irods_admin_pwd }}",
   "host_access_control_config": {
       "access_entries": [],
       "schema_name": "host_access_control_config",
       "schema_version": "v3"
   },

   "host_system_information": {
       "service_account_group_name": "{{ ir_service_account }}",
       "service_account_user_name": "{{ ir_service_account }}"
   },

   "hosts_config": {
       "host_entries": [],
       "schema_name": "hosts_config",
       "schema_version": "v3"
   },

   "coordinating_resources": [],
    "host_access_control_config": {
        "access_entries": [],
        "schema_name": "host_access_control_config",
        "schema_version": "v3"
    },

    "resources": [
        {
           "context_string": "",
           "free_space": "",
           "host_name": "{{ hostvars[inventory_hostname]['fqdn'] }}",
           "id": "10186",
           "name": "{{ ir_local_res }}",
           "parent_context": "",
           "parent_resource": "",
           "status": "up",
           "type": "unixfilesystem",
           "vault_path": "{{ ir_vault_path }}"
       }
   ],

   "server_config": {
       "advanced_settings": {
           "default_log_rotation_in_days": 5,
           "default_number_of_transfer_threads": 4,
           "default_temporary_password_lifetime_in_seconds": 120,
           "dns_cache": {
               "eviction_age_in_seconds": 3600,
               "shared_memory_size_in_bytes": 5000000
           },
           "hostname_cache": {
               "eviction_age_in_seconds": 3600,
               "shared_memory_size_in_bytes": 2500000
           },
           "maximum_number_of_concurrent_rule_engine_server_processes": 4,
           "maximum_size_for_single_buffer_in_megabytes": 32,
           "maximum_temporary_password_lifetime_in_seconds": 1000,
           "rule_engine_server_execution_time_in_seconds": 120,
           "rule_engine_server_sleep_time_in_seconds": 30,
           "transfer_buffer_size_for_parallel_transfer_in_megabytes": 4,
           "transfer_chunk_size_for_parallel_transfer_in_megabytes": 40
       },
       "catalog_provider_hosts": [
           "{{ hostvars[inventory_hostname]['fqdn'] }}"
       ],
       "catalog_service_role": "provider",
       "client_api_whitelist_policy": "enforce",
       "default_dir_mode": "0750",
       "default_file_mode": "0600",
       "default_hash_scheme": "SHA256",
       "default_resource_name": "{{ ir_default_res }}",
       "environment_variables": {
           "IRODS_DATABASE_USER_PASSWORD_SALT": "{{ ir_salt }}"
       },
       "federation": [],
       "match_hash_policy": "compatible",
       "negotiation_key": "{{ ir_negotiation_key }}",
       "plugin_configuration": {
           "authentication": {},
           "database": {
               "postgres": {
                   "db_host": "{{ ir_db_server }}",
                   "db_name": "{{ ir_db_name }}",
                   "db_odbc_driver": "PostgreSQL",
                   "db_password": "{{ ir_db_pwd }}",
                   "db_port": 5432,
                   "db_username": "{{ ir_db_user }}"{% if pgsql_server == "remote" %},
                   "db_sslcert": "/etc/irods/{{ ir_ssl_certificate_chain_file }}",
                   "db_sslkey": "/etc/irods/{{ ir_ssl_certificate_key_file }}",
                   {% if remote_psql_server_ca is defined  %}"db_sslrootcert": "/etc/irods/{{ remote_psql_server_ca | basename }}",{% endif %}
                   "db_sslmode": "require"{% endif %}
               }
           },
           "network": {},
           "resource": {},
           "rule_engines": [
               {
                   "instance_name": "irods_rule_engine_plugin-irods_rule_language-instance",
                   "plugin_name": "irods_rule_engine_plugin-irods_rule_language",
                   "plugin_specific_configuration": {
                       "re_data_variable_mapping_set": [
                           "core"
                       ],
                       "re_function_name_mapping_set": [
                           "core"
                       ],
                       "re_rulebase_set": [
                           "core"
                       ],
                       "regexes_for_supported_peps": [
                           "ac[^ ]*",
                           "msi[^ ]*",
                           "[^ ]*pep_[^ ]*_(pre|post|except|finally)"
                       ]
                   },
                   "shared_memory_instance": "irods_rule_language_rule_engine"
               },
               {
                   "instance_name": "irods_rule_engine_plugin-cpp_default_policy-instance",
                   "plugin_name": "irods_rule_engine_plugin-cpp_default_policy",
                   "plugin_specific_configuration": {}
               },
               {
                   "instance_name": "irods_rule_engine_plugin-unified_storage_tiering-instance",
                   "plugin_name": "irods_rule_engine_plugin-unified_storage_tiering",
                   "plugin_specific_configuration": {}
               }
           ]
       },
       "rule_engine_namespaces": [
           ""
       ],
       "schema_name": "server_config",
       "schema_validation_base_uri": "file:///var/lib/irods/configuration_schemas",
       "schema_version": "v3",
       "server_control_plane_encryption_algorithm": "AES-256-CBC",
       "server_control_plane_encryption_num_hash_rounds": 16,
       "server_control_plane_key": "{{ ir_ctrl_plane_key }}",
       "server_control_plane_port": 1248,
       "server_control_plane_timeout_milliseconds": 10000,
       "server_port_range_end": 20199,
       "server_port_range_start": 20000,
       "xmsg_port": 1279,
       "zone_auth_scheme": "native",
       "zone_key": "{{ ir_zone_key }}",
       "zone_name": "{{ ir_zone }}",
       "zone_port": 1247,
       "zone_user": "{{ ir_admin_name }}"
   },

   "service_account_environment": {
       "irods_client_server_negotiation": "request_server_negotiation",
       "irods_client_server_policy": "{{ ir_client_server_policy }}",
       "irods_connection_pool_refresh_time_in_seconds": 300,
       "irods_cwd": "{{ ir_admin_home_path }}",
       "irods_default_hash_scheme": "SHA256",
       "irods_default_number_of_transfer_threads": 4,
       "irods_default_resource": "{{ ir_default_res }}",
       "irods_encryption_algorithm": "AES-256-CBC",
       "irods_encryption_key_size": 32,
       "irods_encryption_num_hash_rounds": 16,
       "irods_encryption_salt_size": 8,
       "irods_home": "{{ ir_admin_home_path }}",
       "irods_host": "{{ hostvars[inventory_hostname]['fqdn'] }}",
       "irods_match_hash_policy": "compatible",
       "irods_maximum_size_for_single_buffer_in_megabytes": 32,
       "irods_port": 1247,
       "irods_server_control_plane_encryption_algorithm": "AES-256-CBC",
       "irods_server_control_plane_encryption_num_hash_rounds": 16,
       "irods_server_control_plane_key": "{{ ir_ctrl_plane_key }}",
       "irods_server_control_plane_port": 1248,
       "irods_ssl_certificate_chain_file": "/etc/irods/{{ ir_ssl_certificate_chain_file }}",
       "irods_ssl_certificate_key_file": "/etc/irods/{{ ir_ssl_certificate_key_file }}",
       "irods_ssl_dh_params_file": "/etc/irods/{{ ir_ssl_dh_params_file }}",
       "irods_ssl_verify_server": "cert",
       "irods_transfer_buffer_size_for_parallel_transfer_in_megabytes": 4,
       "irods_user_name": "{{ ir_admin_name }}",
       "irods_zone_name": "{{ ir_zone }}",
       "schema_name": "irods_environment",
       "schema_version": "v3"
   }
}
